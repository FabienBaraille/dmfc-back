{% extends 'base.html.twig' %}

{% block title %}{{ season.year }}{% endblock %}

{% block body %}
    <h1>{{ season.year }}</h1>

    <table class="table crud-show">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th>Année</th>
                <td>{{ season.year }}</td>
            <tr>
                <th>Début de saison régulière</th>
                <td>{{ season.startSeason ? season.startSeason|date("d/m/Y") : '' }}</td>
            </tr>            
            <tr>
                <th>Début des playoffs</th>
                <td>{{ season.startPlayoff ? season.startPlayoff|date("d/m/Y") : '' }}</td>
            </tr>            
            <tr>
           
            <tr>
                <th>Commentaire</th>
                <td>{{ season.comment }}</td>
            </tr>            
                     
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_back_season') }}">Retour à la liste</a>

    <a class="btn btn-warning" href="{{ path('app_back_season_edit', {'id': season.id}) }}">Modifier</a>
    {{ include('back/season/_delete_form.html.twig') }}

{% endblock %}
