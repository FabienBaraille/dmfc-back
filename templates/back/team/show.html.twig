{% extends 'base.html.twig' %}

{% block title %}{{ team.name }}{% endblock %}

{% block body %}
    <h1>{{ team.name }}</h1>

    <table class="table crud-show">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ team.id }}</td>
            </tr>
            <tr>
                <th>Trigramme</th>
                <td>{{ team.trigram }}</td>
            </tr>            
            <tr>
                <th>Name</th>
                <td>{{ team.name }}</td>
            </tr>
            <tr>
                <th>Conférence</th>
                <td>{{ team.conference }}</td>
            </tr>  
            <tr>
                <th>Logo</th>
                <td>{{ team.logo }}</td>
            </tr>                      
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_back_team') }}">Retour à la liste</a>

    <a class="btn btn-warning" href="{{ path('app_back_team_edit', {'id': team.id}) }}">Modifier</a>
    {{ include('back/team/_delete_form.html.twig') }}

{% endblock %}
